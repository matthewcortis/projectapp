<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:id="@+id/tab1"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="@color/my_primary"
            android:src="@drawable/baseline_user_24"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:layout_marginStart="10dp"
            android:id="@+id/profile_image_view"/>
        <TextView
            android:id="@+id/nameUserStoryTxt"
            android:layout_width="wrap_content"
            android:text="Hoàng Tùng Dương"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/profile_image_view"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/profile_image_view"
            android:layout_below="@+id/nameUserStoryTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/map_image"
                android:layout_width="16dp"
                android:layout_centerVertical="true"
                android:layout_height="16dp"
                android:src="@drawable/baseline_map_24"
                />
            <TextView
                android:id="@+id/locationTxt"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/map_image"
                android:text="Tây hồ, Hà nội"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/timeDateTxt"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@+id/locationTxt"
                android:text="2h"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content"/>
        </RelativeLayout>


        <ImageView
            android:id="@+id/deleteStoryBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="14dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="14dp"
            android:src="@drawable/baseline_bars_more_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/writeStoryTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tab1"
        android:text="Chào buổi sáng"
        android:background="@color/white"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="13sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/mediaLayoutStory"
        android:layout_below="@id/writeStoryTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/imageStory"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="550dp">
            <ImageView
                android:id="@+id/imageStoryPost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/videoStory"
            android:layout_width="wrap_content"
            android:layout_height="500dp"
            android:visibility="visible"
            >
            <VideoView
                android:id="@+id/videoStoryPost"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/mediaLayoutStory"
        android:id="@+id/bottom_story"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/like"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Thích"
            android:textSize="11sp"
            app:drawableLeftCompat="@drawable/baseline_favorie_24"
            app:drawableTint="@color/chat_color_blue" />
        <TextView
            android:id="@+id/comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Bình luận"
            android:textSize="11sp"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:padding="10dp"
            app:drawableLeftCompat="@drawable/baseline_comment_24"
            app:drawableTint="@color/chat_color_blue" />
        <TextView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:text="Chia sẻ"
            android:gravity="center"
            android:textSize="11sp"
            android:drawablePadding="5dp"
            android:padding="10dp"
            android:layout_marginEnd="13dp"
            app:drawableTint="@color/chat_color_blue"
            app:drawableLeftCompat="@drawable/baseline_share_24" />
    </LinearLayout>

    <TextView
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#E8EAED"
        android:layout_below="@+id/bottom_story"/>
</RelativeLayout>