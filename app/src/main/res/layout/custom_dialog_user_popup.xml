<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:strokeColor="#E0E0E0"
    app:strokeWidth="1dp"
    android:backgroundTint="@android:color/white">

    <!-- RelativeLayout bên trong giữ logic bố cục -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <!-- Nút đóng -->
    <ImageButton
        android:id="@+id/btnCloseDialog"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="6dp"
        android:contentDescription="Close"
        app:srcCompat="@drawable/baseline_out_24"
        app:tint="@color/black" />

    <LinearLayout
        android:id="@+id/contentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCloseDialog"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="8dp">

        <!-- Avatar -->
        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/circle_background"
            android:padding="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_user_24" />

        <!-- Tên -->
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Vikas Assudani"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtProfession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:text="UI/UX Designer"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <!-- Ô nhập Email -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Your Email"
            app:startIconDrawable="@drawable/baseline_message_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:text="vikasassudani909@gmail.com" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ô nhập Số điện thoại -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Phone Number"
            app:startIconDrawable="@drawable/baseline_phone_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:text="+91 9876543210" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Ô nhập Website -->
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Website"
            app:startIconDrawable="@drawable/baseline_website_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputWebsite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:text="www.vikasassudani.com" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:hint="Gender"
            app:startIconDrawable="@drawable/baseline_user_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Nam" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/view_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/my_primary"
            android:text="Nhắn tin"
            android:textColor="@android:color/white"
            android:layout_marginTop="8dp" />

    </LinearLayout>

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>