<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Packages.Newsfeed.Fragment.AddNewFeedFragment">

    <ProgressBar
        android:id="@+id/progress_newfeed"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/my_primary"
        android:visibility="gone"/>

    <!-- Thanh bar trên -->
    <RelativeLayout
        android:id="@+id/bar1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/my_primary">

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/baseline_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/back_btn"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:paddingBottom="2dp"
            android:text="Đăng bài"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/post"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="15dp"
            android:drawableRight="@drawable/baseline_done_24"
            android:drawableTint="@color/white"
            android:fontFamily="sans-serif-medium"
            android:text="Đăng"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </RelativeLayout>

    <!-- Nội dung bên dưới -->
    <RelativeLayout
        android:layout_below="@id/bar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/writeStoryPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top|start"
            android:hint="Bạn đang nghĩ gì?"
            android:inputType="text|textMultiLine"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp"
            android:singleLine="false"
            android:textSize="14sp"/>

        <!-- Option: thêm vị trí -->
        <LinearLayout
            android:id="@+id/optionLayout"
            android:layout_below="@id/writeStoryPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:id="@+id/locationBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_map_24"
                    app:tint="@android:color/black" />

                <TextView
                    android:id="@+id/locationTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:text="Thêm vị trí"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/outline_next_ios_24"
                    app:tint="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Media layout -->
        <LinearLayout
            android:id="@+id/mediaLayout"
            android:layout_below="@id/optionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/imageBackgroundCardView"
                android:layout_width="match_parent"
                android:layout_height="545dp"
                android:visibility="gone"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/baseline_home_24"/>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/videoBackgroundCardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:cardCornerRadius="0dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <VideoView
                        android:id="@+id/videoViewStory"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </RelativeLayout>

    <!-- Nút thêm ảnh -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="20dp"
        android:backgroundTint="@color/my_primary"
        android:src="@drawable/baseline_image_post_24"
        app:tint="@color/white"/>
</RelativeLayout>
